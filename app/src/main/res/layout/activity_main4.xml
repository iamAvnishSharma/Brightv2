<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clouds"
    tools:context="in.bright.avnish.Main4Activity">

    <Button
        android:id="@+id/button19"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button4"
        android:text="1st year"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button20"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/button19"
        android:layout_below="@+id/button19"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button4"
        android:text="2nd year"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button19" />

    <Button
        android:id="@+id/button21"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/button20"
        android:layout_below="@+id/button20"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button4"
        android:text="3rd year"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button20" />

    <Button
        android:id="@+id/button22"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/button21"
        android:layout_below="@+id/button21"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button4"
        android:textColor="@color/black"
        android:text="4th year"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button21" />
</android.support.constraint.ConstraintLayout>
