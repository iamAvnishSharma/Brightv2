<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notesbg"
    tools:context="in.bright.avnish.NotesByear">


    <Button
        android:id="@+id/first"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button4"
        android:text="1st year"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/second"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/first"
        android:layout_below="@+id/first"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button4"
        android:text="2nd year"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/third"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first" />

    <Button
        android:id="@+id/third"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/second"
        android:layout_below="@+id/second"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button4"
        android:text="3rd year"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/fourth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second" />

    <Button
        android:id="@+id/fourth"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/third"
        android:layout_below="@+id/third"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button4"
        android:textColor="@color/black"
        android:text="4th year"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third" />


</android.support.constraint.ConstraintLayout>
